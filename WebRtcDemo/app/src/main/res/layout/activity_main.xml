<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.duanjin.webrtcdemo.MainActivity">

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/render_view"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remote_render_view"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toRightOf="@+id/render_view"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始视频"
        android:layout_marginTop="100px"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorAccent"
        />

    <TextView
        android:id="@+id/start_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始视频2"
        android:layout_marginTop="10px"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_btn"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorAccent"
        />

    <TextView
        android:id="@+id/static_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_chat"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/static_txt"
        app:layout_constraintLeft_toRightOf="@id/static_txt"
        android:background="@color/colorAccent"
        android:text="hello"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

</android.support.constraint.ConstraintLayout>
